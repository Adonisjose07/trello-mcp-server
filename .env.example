USE_CLAUDE_APP=false
# API Keys for different roles (comma separated)
MCP_API_KEY_READ_ONLY=ro_token1,ro_token2
MCP_API_KEY_READ_WRITE=rw_token1,rw_token2
# Legacy support
MCP_API_KEY=secret_token
